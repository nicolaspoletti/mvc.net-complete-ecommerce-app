@model Actor

@{
    ViewData["Title"] = "Delete actor";
}

<div class="row text"> 
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.ActorFullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">               
                        <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ActorProfilePictureURL" class="control-label"></label>
                        <input asp-for="ActorProfilePictureURL" class="form-control" readonly/>
                        <span asp-validation-for="ActorProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActorFullName" class="control-label"></label>
                        <input asp-for="ActorFullName" class="form-control" readonly/>
                        <span asp-validation-for="ActorFullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActorBio" class="control-label"></label>
                        <input asp-for="ActorBio" class="form-control" readonly/>
                        <span asp-validation-for="ActorBio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>      
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function() {
        var output = document.getElementById('ProfilePicturePreview');
        output.src = $("#ActorProfilePictureURL").val();
    })
    </script> 
}