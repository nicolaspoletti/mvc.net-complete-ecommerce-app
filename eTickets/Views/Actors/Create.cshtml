@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}

<div class="row text"> 
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActorProfilePictureURL" class="control-label"></label>
                        <input asp-for="ActorProfilePictureURL" class="form-control"/>
                        <span asp-validation-for="ActorProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActorFullName" class="control-label"></label>
                        <input asp-for="ActorFullName" class="form-control"/>
                        <span asp-validation-for="ActorFullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActorBio" class="control-label"></label>
                        <input asp-for="ActorBio" class="form-control"/>
                        <span asp-validation-for="ActorBio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>          
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function() {
        var output = document.getElementById('ProfilePicturePreview');
        output.src = $("#ActorProfilePictureURL").val();
    })

    $("#ActorProfilePictureURL").on("change", function() {
        var output = document.getElementById('ProfilePicturePreview');
        output.src = $(this).val();
    })
    </script> 
}