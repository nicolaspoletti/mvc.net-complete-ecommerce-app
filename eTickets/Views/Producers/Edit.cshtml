@model Producer

@{
    ViewData["Title"] = "Update Producer";
}

<div class="row text"> 
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProducerProfilePictureURL" class="control-label"></label>
                        <input asp-for="ProducerProfilePictureURL" class="form-control"/>
                        <span asp-validation-for="ProducerProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProducerFullName" class="control-label"></label>
                        <input asp-for="ProducerFullName" class="form-control"/>
                        <span asp-validation-for="ProducerFullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProducerBio" class="control-label"></label>
                        <input asp-for="ProducerBio" class="form-control"/>
                        <span asp-validation-for="ProducerBio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>          
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function() {
        var output = document.getElementById('ProfilePicturePreview');
        output.src = $("#ProducerProfilePictureURL").val();
    })

    $("#ProducerProfilePictureURL").on("change", function() {
        var output = document.getElementById('ProfilePicturePreview');
        output.src = $(this).val();
    })
    </script> 
}